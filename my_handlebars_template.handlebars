 {{#extend "scss"}}
    {{#content "sprites"}}
        {{#each sprites}}
            @mixin icon-{{name}} {
                background-position: {{#if offset_x}} ({{offset_x}}px) {{else}}0{{/if}} {{#if offset_y}} ({{offset_y}}px) {{else}}0{{/if}};
                width: ({{width}}px);
                height: ({{height}}px);
            }
        {{/each}}
    {{/content}}

    {{#content "spritesheet"}}
        @mixin sprite-icon {
            background-image: url({{{spritesheet.escaped_image}}});
            background-repeat: no-repeat;
            background-size: ({{spritesheet.width}}px) ({{spritesheet.height}}px);
        }
    {{/content}}
{{/extend}}
